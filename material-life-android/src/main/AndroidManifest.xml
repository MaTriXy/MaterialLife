<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.juankysoriano.materiallife">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:name="com.juankysoriano.materiallife.MaterialLifeApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:description="@string/description"
    android:label="@string/app_name"
    android:theme="@style/MaterialLifeTheme"
    android:hardwareAccelerated="true">
    <activity
      android:name=".activities.GameOfLifeActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c51e9872cbc936c119bd9e28445756fc5c6d734d" />

    <meta-data
      android:name="com.google.android.gms.version"
      android:value="@integer/google_play_services_version" />

    <meta-data
      android:name="com.google.android.gms.analytics.globalConfigResource"
      android:resource="@xml/analytics_config" />

  </application>
</manifest>
